extends ../layout/base
block content
    section.content-header
        h1
            | Add Produk
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Produk
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/produks/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Name
                                    input(type='text',value='#{name}',name='name',placeholder='Enter Name', autofocus).form-control
                                .form-group
                                    label
                                        | Deskripsi
                                    input(type='text',name='deskripsi',placeholder='Enter deskripsi').form-control
                                .form-group
                                    label
                                        | Merk
                                    input(type='text',value='#{merk}',name='merk',placeholder='Enter Merk').form-control
                                .form-group
                                    label
                                        | Stok
                                    input(type='text',name='stok',placeholder='Enter Stok').form-control
                                .form-group
                                    label
                                        | Harga
                                    input(type='text',name='harga',placeholder='Enter Harga').form-control
                                //- .form-group
                                //-     label
                                //-         | image
                                //-     input(type='file',name='file',placeholder='Enter image').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/produks').btn.btn-primary.pull-right
                                    | Back